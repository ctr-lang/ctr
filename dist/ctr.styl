CTR_CreateStyle($dataObj, _selector, _media)
  if !_media
    {_selector}
      {$dataObj}
  else
    @media _media
      {_selector}
        {$dataObj}

CTR_CreateTimeline(_tlName, $timeline)
  @keyframes {_tlName}
      for i in $timeline
        {i}
          $props = $timeline[i]
          {$props}

